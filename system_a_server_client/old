CC = g++
STD = -std=c++17
CFLAGS = -g -Wall 
LDLIBS = -lpthread

LOG = ../logger/logger.cpp
CSAPP = ./csapp/csapp.o
SER = system_a_server.cpp
CLI = system_a_client.cpp
SERO = system_a_server
CLIO = system_a_client

all: $(SER) $(CLI) $(LOG) 

$(SER): $(CSAPP)
	
	$(CC) $(SER) $(CSAPP) $(CFLAGS) $(LDLIBS) -o $(SERO) 

$(CLI) : $(CSAPP)

	$(CC) $(CLIE) $(CSAPP) $(CFLAGS)  -o $(CLIO)

clean:

	rm -f $(PROGS) *.o *~
